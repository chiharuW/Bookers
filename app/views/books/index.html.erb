<h1>Books</h1>

<table>
  <tr>
    <th>title</th>
    <th>body</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
   <td>
    <span><%= book.title %></span>
   </td>
   <td>
    <span><%= book.body %></span>
   </td>
   <td>
    <%= link_to "Show", "/books" %>
    <%= link_to "Edit", "/books" %>
    <%= link_to "Destroy", "/books" %>
   </td>
   </tr>
  <% end %>

</table>


<h1>new book</h1>

<%= form_with model: @book do |f| %>
 <h4>title</h4>
 <%= f. text_field :title %>

 <h4>body</h4>
 <%= f. text_area :body %> 

 <%= f.submit "create Book" %>

<% end %>