<div class="index-body">
<h1>Books</h1>

<table>
  <tr>
    <th class="th-title">Title</th>
    <th class="th-body">Body</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
   <td>
    <span><%= book.title %></span>
   </td>
   <td>
    <span><%= book.body %></span>
   </td>
   <td>
    <%= link_to "Show", book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
   </td>
   </tr>
  <% end %>

</table>

</div>


<div class="index-body">

 <h2>New book</h2>

  <% if @book.errors.any? %>
  <div class="errors-message">
   <h2 class="h2-errors-message"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
   <ul class="errors-list">
     <% @book.errors.full_messages.each do |message| %>
      <li class="errors-item"><%= message %></li>
     <% end %>
   </ul>
   </div>
  <% end %>
  
  
  <%= form_with model: @book do |f| %>
 <h3>Title</h3>
 <%= f. text_field :title %>

 <h3>Body</h3>
 <%= f. text_area :body %>

<div class="submit">
 <%= f.submit "Create Book" %>
</div>

<% end %>

</div>
